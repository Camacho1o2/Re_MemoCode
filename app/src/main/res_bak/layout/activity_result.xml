<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3e5c5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Result Message -->
    <TextView
        android:id="@+id/resultTextLevel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="LEVEL COMPLETE"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Python Code Output -->

    <!-- Stars Rating -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1Level2Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Star"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/star2Level2Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Star"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/star3Level2Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Star"
            android:src="@drawable/ic_star" />
    </LinearLayout>

    <!-- Success Message -->
    <TextView
        android:id="@+id/successMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Nice one!"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <!-- Magnifying Glass Image -->

    <!-- Restart Button -->
    <ImageView
        android:id="@+id/magnifyingGlass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:contentDescription="Magnifying Glass"
        android:src="@drawable/ic_magnifying_glass" />

    <Button
        android:id="@+id/buttonNextLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:text="Next Level" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:text="Restart"
        android:textColor="@android:color/white" />

    <!-- Main Menu Button -->
    <Button
        android:id="@+id/mainMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:text="Main Menu"
        android:textColor="@android:color/white" /> <!-- Slight margin top for spacing -->
</LinearLayout>
