<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/gradient_background"
    tools:context=".Level3">

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <!-- Level Title -->
        <TextView
            android:id="@+id/levelTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LEVEL 3"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="16dp"
            android:textColor="#000000" />

        <!-- Progress Percentage -->
        <TextView
            android:id="@+id/progressText_level3_part2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Progress: 0%"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#000000" />

        <!-- Stars -->
        <LinearLayout
            android:id="@+id/starsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/star1_level3_part2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/star_outline"
                android:layout_margin="4dp" />

            <ImageView
                android:id="@+id/star2_level3_part2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/star_outline"
                android:layout_margin="4dp" />

            <ImageView
                android:id="@+id/star3_level3_part2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/star_outline"
                android:layout_margin="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_marginTop="8dp"
        style="?android:attr/progressBarStyleHorizontal" />

    <!-- Timer -->
    <TextView
        android:id="@+id/timerText_level3_part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="Time: 00:00"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Content Area -->
    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Instructions -->
        <TextView
            android:id="@+id/questionTextLevel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drag the labels to the correct boxes in the code."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginBottom="20dp"/>

        <!-- Drop Areas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x = &quot;Hello World&quot;"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <FrameLayout
                    android:id="@+id/drop_area_string_level3_part2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/drop_area_background"
                    android:layout_marginStart="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x = 20"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <FrameLayout
                    android:id="@+id/drop_area_integer_level3_part2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/drop_area_background"
                    android:layout_marginStart="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x = 20.5"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <FrameLayout
                    android:id="@+id/drop_area_float_level3_part2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/drop_area_background"
                    android:layout_marginStart="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x = True"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <FrameLayout
                    android:id="@+id/drop_area_boolean_level3_part2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/drop_area_background"
                    android:layout_marginStart="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x = b&quot;Hello&quot;"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <FrameLayout
                    android:id="@+id/drop_area_bytes_level3_part2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/drop_area_background"
                    android:layout_marginStart="8dp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Drag Items -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drag_item_string_level3_part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_yellow"
                android:padding="8dp"
                android:text="String"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/drag_item_integer_level3_part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_orange"
                android:padding="8dp"
                android:text="Integer"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/drag_item_float_level3_part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_dark_green"
                android:padding="8dp"
                android:text="Float"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/drag_item_boolean_level3_part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_teal"
                android:padding="8dp"
                android:text="Boolean"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/drag_item_bytes_level3_part2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_gray"
            android:padding="8dp"
            android:text="bytes"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/resultTextLevel3Part2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Results:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Buttons Area -->
        <LinearLayout
            android:id="@+id/buttonsArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="bottom">

            <ImageButton
                android:id="@+id/buttonGoBack_level3_part2"
                android:layout_width="48dp"
                android:layout_height="54dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Go Back"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_go_back_lv2" />

            <ImageButton
                android:id="@+id/buttonClearArea_level3_part2"
                android:layout_width="114dp"
                android:layout_height="77dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_clear_area"
                android:contentDescription="Clear Area"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/buttonRun_level3_part2"
                android:layout_width="115dp"
                android:layout_height="77dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_run"
                android:contentDescription="Run"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/buttonProceedLevel2_level3_part2"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Proceed"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_proceed_lv2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
