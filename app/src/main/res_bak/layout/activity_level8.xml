<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Navigation Bar -->
        <LinearLayout
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="@drawable/rounded_box_light">

            <TextView
                android:id="@+id/levelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="3dp"
                android:text="LEVEL 8"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/progressTextLevel8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Progress: 0%"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/starsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="5dp">

                <ImageView
                    android:id="@+id/star1Level8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/star_outline" />

                <ImageView
                    android:id="@+id/star2Level8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/star_outline" />

                <ImageView
                    android:id="@+id/star3Level8"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/star_outline" />
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:layout_marginTop="8dp"
            style="?android:attr/progressBarStyleHorizontal" />

        <!-- Timer -->
        <TextView
            android:id="@+id/timerTextLevel8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Time: 01:45"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Write the code to display the output of the following:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/problemDescriptionLevel8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_box"
            android:padding="16dp"
            android:text="Problem: Create a person class, instantiate it and print the person's age and name which is Name: Mike and Age: 21."
            android:textColor="#333333"
            android:textSize="18sp" />

        <!-- Code Input Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_box_light"
            android:orientation="vertical"
            android:padding="12dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <EditText
                    android:id="@+id/codeInputLevel8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_box"
                    android:hint="Type your code here"
                    android:minHeight="150dp"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textColorHint="#888888"
                    android:textSize="16sp" />

            </ScrollView>

        </LinearLayout>

        <!-- Results Area -->
        <TextView
            android:id="@+id/textShowResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Results:" />

        <TextView
            android:id="@+id/resultTextLevel8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="- Results - "
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/buttonsArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageButton
                android:id="@+id/buttonGoBackLevel8"
                android:layout_width="61dp"
                android:layout_height="76dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Go Back"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_go_back_lv2" />

            <ImageButton
                android:id="@+id/buttonClearLevel8"
                android:layout_width="107dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Clear"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_clear_area" />

            <ImageButton
                android:id="@+id/buttonRunLevel8"
                android:layout_width="107dp"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Run"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_run" />

            <ImageButton
                android:id="@+id/buttonProceedLevel8"
                android:layout_width="63dp"
                android:layout_height="65dp"
                android:layout_margin="8dp"
                android:background="@android:color/transparent"
                android:contentDescription="Proceed"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_proceed_lv2" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
