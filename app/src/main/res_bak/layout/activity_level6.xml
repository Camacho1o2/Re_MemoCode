<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/levelTitleLevel2Part1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:text="LEVEL 6"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/progressTextLevel6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Progress: 0%"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/starsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/star1Level6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/star_outline" />

            <ImageView
                android:id="@+id/star2Level6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:src="@drawable/star_outline" />

            <ImageView
                android:id="@+id/star3Level6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:src="@drawable/star_outline" />
        </LinearLayout>
    </LinearLayout>


    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_marginTop="8dp"
        style="?android:attr/progressBarStyleHorizontal" />

    <!-- Timer -->
    <TextView
        android:id="@+id/timerTextLevel6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="Time: 00:00"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Instructions -->
    <TextView
        android:id="@+id/questionTextLevel6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write the code to display the output of the following:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="start"
        android:gravity="start" />

    <TextView
        android:id="@+id/problemDescriptionLevel6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_box"
        android:padding="12dp"
        android:text="Problem: Write a code that request an input from the user then returns if the input is a number, letter or mixed."
        android:textColor="#333333"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_box_light"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <EditText
                android:id="@+id/codeInputLevel6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_box"
                android:hint="Type your code here"
                android:minHeight="100dp"
                android:padding="16dp"
                android:textSize="16sp" />

        </ScrollView>




    </LinearLayout>

    <TextView
        android:id="@+id/textShowResultsLevel6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="Results:" />

    <TextView
        android:id="@+id/resultTextLevel6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="30dp"
        android:text="- results -"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textUserInputLevel6Part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="User Input:"
        android:textColor="#333333"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/textPutUserInputLevel6"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:hint="Insert user input here..."
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/buttonsArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/buttonGoBackLevel6"
            android:layout_width="52dp"
            android:layout_height="53dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Go Back"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_go_back_lv2" />

        <ImageButton
            android:id="@+id/buttonClearAreaLevel6"
            android:layout_width="107dp"
            android:layout_height="77dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear_area"
            android:contentDescription="Proceed"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonRunLevel6"
            android:layout_width="111dp"
            android:layout_height="77dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_run"
            android:contentDescription="Proceed"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonProceedLevel6"
            android:layout_width="53dp"
            android:layout_height="66dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Proceed"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_proceed_lv2" />
    </LinearLayout>

</LinearLayout>
