<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_with_border_a1c6ea"
    tools:context=".Level3">

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <!-- Level Title -->
        <TextView
            android:id="@+id/levelTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LEVEL 3"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="16dp"
            android:textColor="#000000" />

        <!-- Progress Percentage -->
        <TextView
            android:id="@+id/progressTextLevel3Part1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Progress: 0%"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/starsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/star1Level3Part1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/star_outline" />

            <ImageView
                android:id="@+id/star2Level3Part1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:src="@drawable/star_outline" />

            <ImageView
                android:id="@+id/star3Level3Part1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:src="@drawable/star_outline" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_marginTop="8dp"
        style="?android:attr/progressBarStyleHorizontal" />

    <!-- Timer -->
    <TextView
        android:id="@+id/timerTextLevel3Part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="Time: 00:00"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <!-- Content Area -->
    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <!-- Instructions -->
        <TextView
            android:id="@+id/questionTextLevel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:gravity="start"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:text="Drag the labels to the correct boxes in the code."
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="x                    =                     5"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:layout_marginBottom="15dp" />

        <!-- Drop Areas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/dropArea1Level3Part1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/drop_area_background"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dropArea2Level3Part1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/drop_area_background"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dropArea3Level3Part1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/drop_area_background"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/dragContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/dragItemLevel3Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Literal"
            android:background="@drawable/background_with_border_507dbc"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/dragItem2Level3Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variable"
            android:background="@drawable/background_with_border_507dbc"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dragItem3Level3Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Type"
            android:background="@drawable/background_with_border_507dbc"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dragContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/dragItem4Level3Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Method"
            android:background="@drawable/background_with_border_507dbc"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dragItem5Level3Part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Operator"
            android:background="@drawable/background_with_border_507dbc"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/resultTextLevel3Part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Results:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <!-- Content above the buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">
        <!-- Add your content here -->
    </LinearLayout>

    <!-- Buttons Area -->
    <LinearLayout
        android:id="@+id/buttonsArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/buttonGoBackLevel3Part1"
            android:layout_width="67dp"
            android:layout_height="57dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_go_back"
            android:contentDescription="Go Back"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonClearAreaLevel3Part1"
            android:layout_width="107dp"
            android:layout_height="77dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Clear Area"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_clear_area" />

        <ImageButton
            android:id="@+id/buttonRunLevel3Part1"
            android:layout_width="111dp"
            android:layout_height="77dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Run"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_run" />

        <ImageButton
            android:id="@+id/buttonProceedLevel3Part1"
            android:layout_width="67dp"
            android:layout_height="57dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_proceed"
            android:contentDescription="Proceed"
            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>
